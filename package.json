{
  "name": "cnodejs-miniapp",
  "version": "1.0.0",
  "description": "Mini program for Cnodejs",
  "main": "./src/app.js",
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rm -rf dist/*",
    "lint": "eslint -c .eslintrc ./src",
    "build": "webpack --config webpack.config.js",
    "hook:lib": "webpack --config webpack.config.js",
    "hook:css": "lessc ./node_modules/weui-wxss/dist/app.wxss ./src/lib/weui.wxss",
    "postinstall": "cross-env NODE_ENV=production npm run hook:css && npm run hook:lib"
  },
  "author": "linh <linh@fxiaoke.com>",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "less": "^3.8.1",
    "lint-staged": "^7.2.2",
    "webpack": "^4.17.0",
    "webpack-cli": "^3.1.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "htmlparser": "^1.7.7",
    "mobx": "^5.0.5",
    "weui-wxss": "^1.1.1"
  }
}

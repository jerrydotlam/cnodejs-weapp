<!--index.wxml-->
<wxs src="../../filters/time.wxs" module="filters"/>

<view class="post-list">
  <view class="post-item"
    wx:for="{{posts}}"
    wx:key="id"
    data-id="{{item.id}}"
    bindtap="handleDetail">
    <view class="post-item-title">{{item.title}}</view>
    <view class="post-item-time">{{filters.mformat(item.create_at, 'yyyy-MM-dd')}}</view>
  </view>
  <view class="g-loading-bottom" wx:if="{{!isRefreshing && isLoadingMore}}">加载中...</view>
  <view class="g-loading-nodata" wx:elif="{{!isRefreshing}}">没有了</view>
</view>
